{
  "name": "__MSG_appName__",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "name": "__MSG_browserAction__"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "styles/content.css",
        "bower_components/humane-js/themes/libnotify.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "options_ui": {
    "page": "templates/options.html",
    "chrome_style": true
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "clipboardWrite"
  ]
}
